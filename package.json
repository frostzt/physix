{
    "name": "physix",
    "version": "0.0.1",
    "description": "A simple animation or physics library",
    "main": "index.js",
    "scripts": {
        "prebuild": "rimraf ./dist",
        "build": "tsc",
        "format": "prettier --write ./src/**/*",
        "check-format": "prettier --check ./src/**/*",
        "check-types": "tsc --pretty --noEmit",
        "check-lint": "eslint ./src/**/* --ext ts",
        "prepare": "husky install"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/frostzt/physix.git"
    },
    "keywords": [
        "animation",
        "physics"
    ],
    "author": "frostzt",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/frostzt/physix/issues"
    },
    "homepage": "https://github.com/frostzt/physix#readme",
    "devDependencies": {
        "@types/node": "^17.0.16",
        "@typescript-eslint/eslint-plugin": "^5.11.0",
        "@typescript-eslint/parser": "^5.11.0",
        "eslint": "^8.8.0",
        "git-cz": "^4.8.0",
        "husky": "^7.0.4",
        "prettier": "^2.5.1",
        "rimraf": "^3.0.2",
        "typescript": "^4.5.5"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/git-cz"
        }
    }
}
